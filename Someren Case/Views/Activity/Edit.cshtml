@model Someren_Case.Models.Activity

<h1>Edit Activity</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="ActivityID" value="@Model.ActivityID" />

    <div class="form-group">
        <label for="ActivityName">Activity Name</label>
        <input type="text" class="form-control" id="ActivityName" name="ActivityName" value="@Model.ActivityName" required />
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="StartTime">Start Time</label>
        <input type="time" class="form-control" id="StartTime" name="StartTime" value="@Model.StartTime.ToString(@"hh\:mm")" required />
    </div>
    <div class="form-group">
        <label for="EndTime">End Time</label>
        <input type="time" class="form-control" id="EndTime" name="EndTime" value="@Model.EndTime.ToString(@"hh\:mm")" required />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
