@model Someren_Case.Models.ActivityManagementViewModel

@{
    ViewData["Title"] = "Manage Activity Participants";
}

<h1>@Model.Activity.ActivityName - Manage Participants</h1>

<h3>Participating Students</h3>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model.ParticipatingStudents)
    {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>
                <form method="post" asp-action="RemoveParticipant" asp-route-activityId="@Model.Activity.ActivityID" asp-route-studentId="@student.StudentId">
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<h3>Non-Participating Students</h3>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model.NonParticipatingStudents)
    {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>
                <form method="post" asp-action="AddParticipant" asp-route-activityId="@Model.Activity.ActivityID" asp-route-studentId="@student.StudentId">
                    <button type="submit" class="btn btn-success">Add</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>