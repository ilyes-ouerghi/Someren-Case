@model Someren_Case.Models.Activity

@{
    ViewData["Title"] = "Delete Activity";
}

<h2>Are you sure you want to delete the activity @Model.ActivityName?</h2>

<form method="post" asp-action="Delete" asp-route-activityId="@Model.ActivityID">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Activity")" class="btn btn-secondary">Cancel</a>
</form>