@model Someren_Case.Models.Lecturer

@{
    ViewData["Title"] = "Delete Lecturer";
}

<h2>Delete Lecturer</h2>

<h3>Are you sure you want to delete this lecturer?</h3>
<div>
    <h4>Lecturer Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@(DateTime.Now.Year - Model.DateOfBirth.Year)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="LecturerID" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>


</div>