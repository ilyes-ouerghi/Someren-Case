@model List<Someren_Case.Models.Lecturer>

<h2>Lecturers</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.FirstName</td>
                <td>@lecturer.LastName</td>
                <td>@lecturer.PhoneNumber</td>
                <td>@lecturer.Age</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Lecturers", new { id = lecturer.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Lecturers", new { id = lecturer.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="@Url.Action("Create", "Lecturers")">Add Lecturer</a>
