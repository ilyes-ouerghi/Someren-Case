@model List<Someren_Case.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<a href="@Url.Action("Create", "Students")" class="btn btn-primary">Add New Student</a>

<table class="table">
    <thead>
    <tr>
        <th>Student ID</th>
        <th>Student Number</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Class</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentId</td>
            <td>@student.StudentNumber</td>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.PhoneNumber</td>
            <td>@student.Class</td>
            <td>
                <a href="@Url.Action("Edit", "Students", new { id = student.StudentId })" class="btn btn-secondary">Edit</a>
                <a href="@Url.Action("Delete", "Students", new { id = student.StudentId })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>