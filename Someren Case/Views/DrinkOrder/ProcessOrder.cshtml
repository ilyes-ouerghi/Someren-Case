@{
    ViewData["Title"] = "Process Drink Order";
    var students = ViewBag.Students as List<Someren_Case.Models.Student>;
    var drinks = ViewBag.Drinks as List<Someren_Case.Models.Drink>;
}

<h2>Process Drink Order</h2>

<form asp-controller="Drink" asp-action="ConfirmOrder" method="post">
    <div>
        <label>Select Student:</label>
        <select name="StudentID" required>
            @foreach (var student in students)
            {
                <option value="@student.StudentID">@student.FirstName @student.LastName</option>
            }
        </select>
    </div>

    <div>
        <label>Select Drink:</label>
        <select name="DrinkID" required>
            @foreach (var drink in drinks)
            {
                <option value="@drink.DrinkID">@drink.Name</option>
            }
        </select>
    </div>

    <div>
        <label>Quantity:</label>
        <input type="number" name="Quantity" min="1" required />
    </div>

    <button type="submit">Continue</button>
</form>
