@model Someren_Case.Models.Lecturer

@{
    ViewData["Title"] = "Edit Lecturer";
}

<h2>Edit Lecturer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="LecturerID" value="@Model.LecturerID" />

    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="LastName" value="@Model.LastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update</button>
    <a href="@Url.Action("Index", "Lecturer")" class="btn btn-secondary mt-3">Cancel</a>
</form>
