@model List<Someren_Case.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}

<h2>Lecturers</h2>

<a href="@Url.Action("Create", "Lecturer")" class="btn btn-primary mb-3">Add New Lecturer</a>

<
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Lecturer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th> <!-- Updated column name -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.LecturerID</td>
                <td>@lecturer.FirstName</td>
                <td>@lecturer.LastName</td>
                <td>@lecturer.PhoneNumber</td>
                <td>@lecturer.Age</td> <!-- Show calculated Age -->
                <td>
                    <a href="@Url.Action("Edit", "Lecturer", new { id = lecturer.LecturerID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Lecturer", new { id = lecturer.LecturerID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

