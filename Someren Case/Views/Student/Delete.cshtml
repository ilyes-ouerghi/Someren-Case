@model Someren_Case.Models.Student

<h2>Delete Student</h2>

<div class="delete-container">
    <p class="warning-text">Are you sure you want to delete this student?</p>

    <div class="student-details">
        <p><strong>Student Number:</strong> @Model.StudentNumber</p>
        <p><strong>First Name:</strong> @Model.FirstName</p>
        <p><strong>Last Name:</strong> @Model.LastName</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Class:</strong> @Model.Class</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StudentID" />
        <div class="button-group">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .delete-container {
        width: 50%;
        margin: auto;
        background: #fff3f3;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(255, 0, 0, 0.2);
        text-align: center;
    }

    .warning-text {
        font-size: 18px;
        font-weight: bold;
        color: #d9534f;
        margin-bottom: 15px;
    }

    .student-details {
        text-align: left;
        background: #fff;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

    .student-details p {
        font-size: 16px;
        margin: 5px 0;
    }

    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn {
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        display: inline-block;
        cursor: pointer;
        border: none;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>
