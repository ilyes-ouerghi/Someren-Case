@model IEnumerable<Someren_Case.Models.DrinkOrderViewModel>

@{
    ViewData["Title"] = "Drinks List with Orders";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>

        <!-- Create New Drink Button -->
        <a href="@Url.Action("Create", "Drink")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Drink
        </a>

        <!-- Manage Orders Button -->
        <a href="@Url.Action("Create", "Order")" class="btn btn-secondary">
            <i class="bi bi-cart-plus"></i> Manage Orders
        </a>
    </div>

    <div class="card shadow rounded">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>VAT Rate</th>
                    <th>Stock Quantity</th>
                    <th>Orders</th> <!-- Column for displaying orders -->
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var drinkOrder in Model)
                {
                    <tr>
                        <td>@drinkOrder.Drink.Name</td>
                        <td>@drinkOrder.Drink.Type</td>
                        <td>@drinkOrder.Drink.VATRate</td>
                        <td>@drinkOrder.Drink.StockQuantity</td>
                        <td>
                            <!-- Loop through orders for each drink and display their details -->
                            @foreach (var order in drinkOrder.Orders)
                            {
                                <div>
                                    Student: @order.StudentName, Quantity: @order.Quantity
                                </div>
                            }
                        </td>
                        <td class="text-end">
                            <!-- Edit and Delete Buttons -->
                            <a href="@Url.Action("Edit", "Drink", new { id = drinkOrder.Drink.DrinkID })" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", "Drink", new { id = drinkOrder.Drink.DrinkID })" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <footer class="footer text-muted mt-4">
        <p>&copy; 2025 - Someren_Case</p>
    </footer>
</div>